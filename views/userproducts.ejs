<% include ./parsials/headar.ejs %>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800&display=swap");
  *{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;

  }
  ::-webkit-scrollbar{
    display: none;

  }
  html,body{
    width: 100%;
    height: 100%;
    /* background-color: aqua; */
    /* background-image: url(https://m.media-amazon.com/images/G/31/social_share/amazon_logo._CB633266945_.png); */
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;

  }   
  #container{
      width: 100%;
      min-height: 100vh;
      background-color: rgb(247, 233, 215);
      padding: 50px;
  }  
  .user-image{
      width: 100px;
      height: 120px;
      border: 5px solid whitesmoke;
      border-radius: 20px;
      overflow: hidden;

  }   
  .user-image>img{
      width: 100%;
      height: 100%;
      object-position: center;
      object-fit: cover;
      background-repeat: no-repeat;

  }
  a{
      text-decoration: none;
  }
  .pro-section{
      display: flex;
      gap: 30px;

  }
  .user-name>h6,h2{font-weight: 300; text-transform: capitalize; }
  #pop{
    display: flex;
    justify-content: space-between;
    align-items: center;

  }
  a{
    color: rgb(77, 73, 73);
  }
  button{
    border: none;
    outline: none;
    background: none;

  }



</style>
  


    <div id="container"">
        <br>        
        <h1>Your All Products !</h1>
        <hr>
        <div class="d-flex align-content-stretch flex-wrap" style="gap:80px;">

          <%user.products.forEach(function(pr){%>
            <div class="card" style="width: 18rem;">
              <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                  <div class="carousel-item active" data-bs-interval="10000">
                    <img src="../images/productimages/<%=pr.productpic[0]%>" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                  </div>
                  <div class="carousel-item" data-bs-interval="2000">
                    <img src="../images/productimages/<%=pr.productpic[1]%>" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img src="../images/productimages/<%=pr.productpic[2]%>" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
              <div class="card-body">
                <h5 style="text-transform: capitalize;" class="card-title"><%=pr.productname%></h5>
                <p class="card-text"><%=pr.disc%></p>
                <h6 style="color: green; font-style: bold;">&#x20B9; <%=pr.price%></h6>
                <br>
                <div class="d-grid gap-2">
                  <a href="" class="btn btn-warning">✒ Edit Products</a>
                  <a href="/deletproduct/<%= pr._id %>" class="btn btn-info"> ✂ Delet Product</a>  
                </div>
              </div>
          </div>
          <%})%>
        </div>
      </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

  </body>

</html>