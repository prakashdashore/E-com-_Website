<% include ./parsials/headar.ejs %>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800&display=swap");
  *{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;

  }
  ::-webkit-scrollbar{
    display: none;

  }
  html,body{
    width: 100%;
    height: 100%;
    /* background-color: aqua; */
    /* background-image: url(https://m.media-amazon.com/images/G/31/social_share/amazon_logo._CB633266945_.png); */
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;

  }   
  #container{
      width: 100%;
      min-height: 100vh;
      background-color: rgb(255, 253, 250);
      padding: 50px;
  }  
  .user-image{
      width: 100px;
      height: 120px;
      border: 5px solid whitesmoke;
      border-radius: 20px;
      overflow: hidden;

  }   
  .user-image>img{
      width: 100%;
      height: 100%;
      object-position: center;
      object-fit: cover;
      background-repeat: no-repeat;

  }
  a{
      text-decoration: none;
  }
  .pro-section{
      display: flex;
      gap: 30px;

  }
  .user-name>h6,h2{font-weight: 300; text-transform: capitalize; }
  #pop{
    display: flex;
    justify-content: space-between;
    align-items: center;

  }
  a{
    color: rgb(77, 73, 73);
  }
  button{
    border: none;
    outline: none;
    background: none;

  }

  .btns{
    width: max-content;
    height: max-content;

  }
  @media (max-width:500px){
    
  .btns{
    width: max-content;
    height: max-content;
    display: flex;
    flex-direction: column;
    gap: 20px;

  }

    
  }



</style>
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">CREATE YOUR PRODUCT</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/productcreate" method="post" enctype="multipart/form-data" >
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Product Name</label>
              <input name="productname" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
              
              <label for="exampleInputEmail1" class="form-label">Product Price</label>
              <input name="price" type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Product Discreption</label>
              <textarea name="dis"  type="textarea" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"></textarea>
            </div>
            <div class="mb-3">
              <label for="formFile" class="form-label">Choose Product Picture</label>
              <input  name="productpic" class="form-control" type="file" id="formFile">
            </div> 
            <div class="mb-3">
              <label for="formFile" class="form-label">Choose Product Picture</label>
              <input  name="productpic" class="form-control" type="file" id="formFile">
            </div> 

          


            <div class="mb-3">
              <label for="formFile" class="form-label">Choose Product Picture</label>
              <input  name="productpic" class="form-control" type="file" id="formFile">
            </div> 
            <button type="submit" class="btn btn-primary">Create Your Product.</button>
          </form>
          
        </div>
        
      </div>
    </div>
  </div> 
    <div id="container"">
        <!-- <h1>Profile Page! <%= verified %></h1> -->
        <hr>
        <%if(verified){%>
          <div style="color: green; display: flex;">
          
            <p style="color: green; display: flex;" >Your Profile is verified</p>
            <div style=" margin-left: 5px;margin-top: 8px; width: 10px;height: 10px; background: green; border-radius:50% ;"></div>

          </div>
          <%}else{%>
            <div id="pop" class=" alert alert-danger text-decoration-none" >
              <div>Your profile is incomplete,<a href="/verify"> verify your account</a> to get complete access.</div>
              <button class="text-decoration-none btn btn-outline-danger" ><a href="/verify">verify</a></button>
            </div>
            

         <%}%>
        <br>
        <div class="pro-section">
            <div class="user-image">
                <img src="./images/userimages/<%=user.userpic%>" alt="">
            </div>
            <div class="user-name">
                <h2><%= user.name%></h2>
                <h6>@<%= user.username%></h6>                
                <p><a href="/profilephoto">Edit Your Profile</a></p>

            </div>
        </div>
        <br>
        
        <div class="btns">
                    
            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
              Create New Product
              
            </button>
            <a href="/userproducts" type="button" class="btn btn-outline-warning">Update Old Product</a>
            <a href="/allproducts" type="button" class="btn btn-outline-info">See All Products</a>
        </div>
        <br>        
        <h1>Your Recent Products !</h1>
        <hr>
        <div class="d-flex align-content-stretch flex-wrap" style="gap:80px;">

          <%user.products.forEach(function(pr){%>
            <div class="card" style="width: 18rem;">
              <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                  <div class="carousel-item active" data-bs-interval="10000">
                    <img src="../images/productimages/<%=pr.productpic[0]%>" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                  </div>
                  <div class="carousel-item" data-bs-interval="2000">
                    <img src="../images/productimages/<%=pr.productpic[1]%>" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img src="../images/productimages/<%=pr.productpic[2]%>" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
              <div class="card-body">
                <h5 style="text-transform: capitalize;" class="card-title"><%=pr.productname%></h5>
                <p class="card-text"><%=pr.disc%></p>
                <h6 style="color: green; font-style: bold;">&#x20B9; <%=pr.price%></h6>
                <br>
                <div class="d-grid gap-2">
                  <a href="#" class="btn btn-warning">✒ Edit Products</a>
                  <a href="/deletproduct/<%= pr._id %>" class="btn btn-info"> ✂ Delet Product</a>
                  
                </div>
              </div>
          </div>

          <%})%>

          

          




          
        </div>

    </div>
