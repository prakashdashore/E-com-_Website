<% include ./parsials/headar.ejs %>

    <div class="container">
        <br>
        <h1>All Products !</h1>
        <hr>
        <br>

        <div class="d-flex align-content-stretch flex-wrap" style="gap:80px;">
          
            <%allprods.forEach(function(pr){%>
                <div class="card" style="width: 18rem;">
                  <img src="../images/productimages/<%=pr.productpic[0]%>" class="card-img-top" alt="...">
                  <div class="card-body">
                  <h5 class="card-title"><%=pr.productname%></h5>
                    <p class="card-text"><%=pr.disc%></p>
                    <br>
                    <% if(loggedInUser.products.map(e => e._id.toString()).indexOf(pr._id.toString()) != -1){ %>
                      <button type="button" class="btn btn-primary btn-sm">Edit</button>
                      <a href="/deletproduct/<%= pr._id %>" class="btn btn-primary btn-sm" >Delet product</a>
                      <% }else{ %>
                        <a href="#" class="btn btn-primary">Buy Now</a>
                    <% } %> 

                      
                    <br>
                    <br>
                    </div>
                </div>
    
            <% }) %>
    
              
    
              
    
    
    
    
              
        </div>

    </div>
